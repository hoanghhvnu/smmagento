<?xml version="1.0"?>
<config>
    <modules>
        <SM_Filter>
            <version>0.1.0</version>
        </SM_Filter>
    </modules>
    <frontend>
        <routers>
            <filterrouter>
                <use>standard</use>
                <args>
                    <module>SM_Filter</module>
                    <frontName>filterfront</frontName>
                </args>
            </filterrouter>
        </routers>
        <layout>
            <updates>
                <filter>
                    <file>filter.xml</file>
                </filter>
            </updates>
        </layout>
    </frontend>
